<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/listItemExpenseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listItemExpenseTime"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/listItemExpenseDate"
        app:layout_constraintStart_toStartOf="@+id/listItemExpenseDate"
        app:layout_constraintTop_toBottomOf="@+id/listItemExpenseDate" />

    <TextView
        android:id="@+id/listItemExpenseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/listItemExpenseDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listItemExpenseDate" />

    <TextView
        android:id="@+id/listItemExpenseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/listItemExpenseType"
        app:layout_constraintStart_toStartOf="@+id/listItemExpenseType"
        app:layout_constraintTop_toBottomOf="@+id/listItemExpenseType" />

    <TextView
        android:id="@+id/listItemExpenseComment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/listItemExpenseTime"
        app:layout_constraintEnd_toStartOf="@+id/listItemExpenseType"
        app:layout_constraintStart_toEndOf="@+id/listItemExpenseDate"
        app:layout_constraintTop_toTopOf="@+id/listItemExpenseDate"
        app:layout_constraintVertical_bias="0.428" />
</androidx.constraintlayout.widget.ConstraintLayout>